server {
	listen 80 default_server;
	listen [::]:80 default_server;
	server_name _;
	return 301 https://$host$request_uri;
}

server {
	listen 443 ssl http2;
        # Note the mispelling; lejuene.majikes.net does not have https support.  It is insecure 
	server_name localhost lejeune majikes.net lejeune.majikes.net lejuene.majikes.net;

	root /var/www/lejeune/;
	index index.html;
    ssl_certificate /etc/letsencrypt/live/lejeune.majikes.net-0001/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/lejeune.majikes.net-0001/privkey.pem; # managed by Certbot

        ssl_session_cache shared:SSL:1m;
        ssl_session_timeout  5m;
        ssl_protocols TLSv1 TLSv1.1 TLSv1.2;

        ssl_ciphers "EECDH+ECDSA+AESGCM EECDH+aRSA+AESGCM EECDH+ECDSA+SHA384 EECDH+ECDSA+SHA256 EECDH+aRSA+SHA384 EECDH+aRSA+SHA256 EECDH+aRSA+RC4 EECDH EDH+aRSA RC4 !aNULL !eNULL !LOW !3DES !MD5 !EXP !PSK !SRP !DSS +RC4 RC4";
        ssl_prefer_server_ciphers   on;

	gzip on;
	gzip_types text/plain application/javascript application/octet-stream;
	gzip_proxied no-cache no-store private expired auth;
	gzip_min_length 1000;

	location = /favicon.ico {
	    access_log off;
	}

	location ~* ^/(\d\d)/(.*) {
		satisfy any;
		allow 127.0.0.1;
		allow 152.2.129.207;
		deny all;
		auth_pam  "Secure Zone";
		auth_pam_service_name "nginx2";
		proxy_pass http://127.0.0.1:80$1/$2$is_args$args;
		proxy_set_header Host $host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Scheme $scheme;
		proxy_set_header X-Script-Name /$1;
	}

	include snippets/lejeune.conf;





}
