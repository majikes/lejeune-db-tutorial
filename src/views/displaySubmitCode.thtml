<style>
p.code {
  text-align: center;
  font-size: 50px;
  margin: 0;
}
p#url {
  text-align: center;
  font-size: 50px;
  font-family: monospace;
  margin: 0;
}
p#notes {
  margin: 0;
  font-size: 40px;
}
</style>
<script>
setInterval(() => {
  fetch('./submitcode', { headers: {'Accept': 'application/json'}})
    .then(resp => resp.json())
    .then(data => {
      document.getElementById('code').innerHTML = data.code;
      document.getElementById('time').innerHTML = data.time;
    })
  }, 30 * 1000);
</script>
<h1 style="font-size: 50px">Submit codes</h1>

% if defined('url') and url:
  <p id="url">{{url}}</p>
% end
<p class="code">
  Code <span id="code">{{code}}</span><br />
  Time <span id="time">{{time}}</span>
</p>

<p id="notes" contenteditable="true">
Notes:
</p>
% rebase('assessment.base')
