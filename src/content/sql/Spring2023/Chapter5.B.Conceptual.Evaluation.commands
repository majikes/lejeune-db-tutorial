DROP TABLE IF EXISTS Sailors;
CREATE TABLE Sailors (sid char(20), sname char(20), rating integer, age real);
INSERT INTO Sailors values ('22', 'dustin', 7, 45.0);
INSERT INTO Sailors values ('31', 'lubber', 8, 55.5);
INSERT INTO Sailors values ('58', 'rusty', 10, 35.0);

SELECT 'The Sailors table:' as '';
SELECT * FROM Sailors;

SELECT 'The first step is to take the cross product:' as '';
SELECT * 
  FROM Sailors AS S, Reserves AS R;

SELECT 'The second step is to apply S.sid=R.sid AND R.bid=103' as '';
SELECT * 
  FROM Sailors AS S, Reserves AS R
 WHERE S.sid=R.sid AND
       R.bid=103;

SELECT 'The third step is to elimination unwanted columns:' as '';
SELECT S.sname
  FROM Sailors AS S, Reserves AS R
 WHERE S.sid=R.sid AND
       R.bid=103;
