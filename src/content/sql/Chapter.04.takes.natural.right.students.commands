PRAGMA foreign_keys = ON;

DROP TABLE IF EXISTS Student;
DROP TABLE IF EXISTS Takes;

create table student
	(ID			varchar(5), 
	 name			varchar(20) not null, 
	 dept_name		varchar(20), 
	 tot_cred		numeric(3,0) check (tot_cred >= 0),
	 primary key (ID)
	);

